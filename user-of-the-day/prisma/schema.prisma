generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Chat {
  id                   Int                    @id @default(autoincrement())
  currentUserId        Int?
  currentLoserId       Int?
  lastWinnerDrawDate   DateTime?
  lastLoserDrawDate    DateTime?
  UserChatStats        UserChatStats[]
  UserChatStats_dg_tmp UserChatStats_dg_tmp[]
}

model UserChatStats {
  userId              Int
  chatId              Int
  username_transient  String?
  userCount           Int
  loserCount          Int
  deactivated_at      DateTime?
  firstName_transient String?
  chat                Chat      @relation(fields: [chatId], references: [id])

  @@id([userId, chatId])
}

model UserChatStats_dg_tmp {
  userId              Int
  chatId              Int
  username_transient  String?
  userCount           Int
  loserCount          Int
  deactivated_at      DateTime?
  firstName_transient String?
  column_name         Int?
  Chat                Chat      @relation(fields: [chatId], references: [id])

  @@id([userId, chatId])
}
