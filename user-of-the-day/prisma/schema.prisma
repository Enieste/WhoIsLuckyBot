generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Chat {
  id             Int             @id @default(autoincrement())
  currentUserId  Int?
  currentLoserId Int?
  lastDrawDate   DateTime?
  UserChatStats  UserChatStats[]
}

model UserChatStats {
  userId             Int
  chatId             Int
  username_transient String?
  userCount          Int
  loserCount         Int
  deactivated_at     DateTime?
  chat               Chat      @relation(fields: [chatId], references: [id])

  @@id([userId, chatId])
}
